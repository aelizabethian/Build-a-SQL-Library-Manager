extends layout 

block content 
    h1 Update Book
    .container
        form(method="post")
            p.formInput
                label(for='title') Title
                input#title(name='title' type='text' value= book.title)
            p.formInput
                label(for='author') Author
                input#author(name='author' type='text' value= book.author)
            p.formInput
                label(for='genre') Genre
                input#genre(name='genre' type='text' value= book.genre)
            p.formInput
                label(for='year') Year
                input#year(name='year' type='text' value= book.year)
            p
                input#createBtn(type='submit' value='Update Book')

            p.cancelBtnDiv
                    a.button(href="/books" immediate="true" class="cancelBtn") Cancel
    
            p
                a(href="/books/"+book.id+"/delete" immediate="true" class="cancelBtn button") Delete

            